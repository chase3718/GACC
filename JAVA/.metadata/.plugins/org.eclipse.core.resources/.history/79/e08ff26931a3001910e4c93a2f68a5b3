package com.itemmanager;

import static org.assertj.core.api.Assertions.assertThat;

import java.io.IOException;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.json.JsonTest;
import org.springframework.boot.test.json.JacksonTester;
import org.springframework.test.context.junit4.SpringRunner;
import org.springframework.transaction.annotation.Transactional;

import com.itemmanager.business.Item;

@RunWith(SpringRunner.class)
@JsonTest
@Transactional
public class ItemJsonTests {
	@Autowired
	private JacksonTester<Item> json;
	
	@Test
	public void serializeItemJsonTest() {
		Item i = new Item("Test Item", 10, 10);
		
		try {
			assertThat(json.write(i)).extractingJsonPathStringValue("$.name").isEqualTo("Test Item");
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
}
